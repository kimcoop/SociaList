<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/label_name"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/item_name"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:padding="2dp"
            android:text="@+id/item_name"
            android:textSize="12dp" />
    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:text="@string/label_quantity"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="14dp" />

        <EditText
            android:id="@+id/item_quantity"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:padding="2dp"
            android:text="@+id/item_quantity"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_creation"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4.0dp"
        android:text="@+id/item_creation" />

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/label_assignee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="4.0dp"
            android:text="@string/label_assignee" />

        <EditText
            android:id="@+id/item_assignee"
            android:layout_width="fill_parent"
            android:layout_height="30dp"
            android:focusable="false"
            android:padding="4dp"
            android:textSize="12dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/header_notes"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:padding="4.0dp"
        android:text="@string/label_notes" />

    <EditText
        android:id="@+id/item_notes"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:inputType="textMultiLine"
        android:padding="4.0dp"
        android:textSize="12dp" >
    </EditText>
        
     <ToggleButton 
       android:id="@+id/item_completion"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:textOn="Completed"
       android:textOff="Not Completed"
       android:layout_gravity="center"
       android:onClick="onToggleClicked" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_gravity="bottom"
        android:gravity="bottom|center"
        android:orientation="horizontal"
        android:padding="2dp" >

        <Button
            android:id="@+id/delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="deleteItem"
            android:text="Delete" />

        <Button
            android:id="@+id/save_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="saveItem"
            android:text="Save" />

        <Button
            android:id="@+id/next_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="nextItem"
            android:text="Next Item" />

        <Button
            android:id="@+id/prev_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="prevItem"
            android:text="Prev Item" />
    </LinearLayout>

</LinearLayout>