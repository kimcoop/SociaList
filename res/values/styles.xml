<resources>
    

    <style name="DashboardButton">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:drawablePadding">2dp</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@null</item>
    </style>
    
    <style name ="hozLine1pxLight">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">1dip</item>
	    <item name="android:background">@color/turquoise_5</item>
    </style>
    
    <style name ="hozLine1pxGrey">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">1dip</item>
	    <item name="android:background">#30353b</item>
    </style>
    
    <style name ="dropShadow">
	    <item name="android:background">@drawable/drop_shadow</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">5dip</item>
    </style>
    <style name ="dropShadowList">
	    <item name="android:background">@drawable/drop_shadow_list</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">4dip</item>
    </style>
    <style name ="dropShadowListHeader">
	    <item name="android:background">@drawable/drop_shadow_list_header</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">5dip</item>
    </style>
    <style name ="dropShadowListFooter">
	    <item name="android:background">@drawable/drop_shadow_list_footer</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">5dip</item>
    </style>
    <style name ="dropShadowUp">
	    <item name="android:background">@drawable/drop_shadow_up</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">5dip</item>
    </style>
    
    <style name ="headerBar">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">50dip</item>
	    <item name="android:gravity">center</item>
	    <item name="android:text">@string/app_name</item>
	    <item name="android:background">@drawable/header_bar</item>
	    <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
     <style name ="footerBar">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">40dip</item>
	    <item name="android:background">@drawable/header_bar</item>
    </style>
    
    <style name ="listBackground">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">fill_parent</item>
	    <item name="android:background">@drawable/bg_list</item>
    </style>
    
     <style name="turquoiseLight">
          <item name="android:background">@color/turquoise_light</item>
     </style>
     
     <style name="turquoiseBgMedium">
         <item name="android:background">@drawable/bg_gradient</item>  
     </style>



</resources>
